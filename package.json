{
  "name": "isometry",
  "version": "0.1.0",
  "description": "Isometry React prototype - now with native database integration (sql.js migration completed)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:terminal": "concurrently \"npm run start:terminal-server\" \"npm run dev\"",
    "start:terminal-server": "tsx scripts/start-terminal-server.ts",
    "dev:native": "cross-env REACT_APP_USE_NATIVE_API=true vite",
    "dev:desktop": "tauri dev",
    "build": "vite build",
    "build:with-typecheck": "tsc --project tsconfig.build.json --noEmit && vite build",
    "build:desktop": "tauri build",
    "build:desktop:debug": "tauri build --debug",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "start:native-api": "node src/server/launch-native-server.js",
    "dev:full-native": "concurrently \"npm run start:native-api\" \"npm run dev:native\"",
    "build:native": "cd native && swift build --target IsometryAPIServer",
    "watch:console": "node scripts/console-watch.mjs",
    "dev:debug": "node scripts/dev-debug-cycle.mjs",
    "dev:debug:headless": "HEADLESS=true node scripts/dev-debug-cycle.mjs",
    "test:cli-automation": "node scripts/cli-test-automation.js",
    "check": "npm run check:types && npm run check:lint && npm run check:unused && npm run check:duplication && npm run check:boundaries && npm run check:directory-health",
    "check:quick": "npm run check:types && npm run check:lint",
    "check:types": "tsc --noEmit",
    "check:lint": "eslint src --max-warnings 700",
    "check:unused": "knip --max-issues 750",
    "check:duplication": "jscpd src --min-tokens 25 --threshold 70 --reporters console",
    "check:boundaries": "depcruise src --config .dependency-cruiser.cjs --validate",
    "check:directory-health": "node scripts/check-directory-health.mjs"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toggle": "^1.1.10",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-virtual": "^3.13.18",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-window-state": "^2.4.1",
    "@tiptap/core": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/markdown": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "@tiptap/suggestion": "^3.19.0",
    "@types/jszip": "^3.4.0",
    "@uiw/react-md-editor": "^4.0.11",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "exponential-backoff": "^3.1.3",
    "gray-matter": "^4.0.3",
    "html2pdf.js": "^0.10.2",
    "idb": "^8.0.3",
    "jszip": "^3.10.1",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.294.0",
    "mammoth": "^1.7.2",
    "marked": "^17.0.2",
    "node-pty": "^1.1.0",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "sql.js": "^1.13.0",
    "sql.js-fts5": "^1.4.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tippy.js": "^6.3.7",
    "uuid": "^11.0.4",
    "ws": "^8.19.0",
    "xlsx": "^0.18.5",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@evilmartians/lefthook": "^2.1.0",
