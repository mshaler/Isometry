    "@types/node": "^22.11.7",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "dependency-cruiser": "^17.3.7",
    "eslint": "^9.39.2",
    "eslint-plugin-sonarjs": "^3.0.6",
    "glob": "^10.3.10",
    "jscpd": "^4.0.8",
    "jsdom": "^27.4.0",
    "knip": "^5.83.1",
    "path-browserify": "^1.0.1",
    "playwright": "^1.58.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "terser": "^5.46.0",
    "tsx": "^4.21.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
